@page
@model IndexModel
@{
    ViewData["Title"] = "Página Icial";
}


<h1 class="mt-3">Bem Vindo a EletroVision!!</h1>
<div class="row justify-content-center">
    @foreach (var eletrodomestico in Model.ListaEletrodomesticos)
    {
        <div class="card col-3 m-3">
            <img src="@eletrodomestico.ImagemUri" class="p-3" style="border-radius: 25px">
            <div class="card-body">
                <h5 class="card-title">@eletrodomestico.Nome</h5>
                <p class="card-text">@eletrodomestico.Descricao</p>
                <a class="btn btn-primary" asp-page="/Detalhes" asp-route-id="@eletrodomestico.EletrodomesticoId">Ver Mais</a>
            </div>
        </div>

    }
</div>


