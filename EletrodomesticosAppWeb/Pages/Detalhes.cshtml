@page "eletrodomestico/{slug}/{id:int:min(1)}"
@model EletrodomesticosAppWeb.Pages.DetalhesModel

<h2 class="my-3">@Model.Eletrodomestico.Nome</h2>

<div class="row">
    <div class="col-4">
        <img class="img-fluid rounded" src="@Model.Eletrodomestico.ImagemUri">
    </div> 
    <div class="col-6">
        <h4 class="my-3">Sobre:</h4>
        <p>@Model.Eletrodomestico.Descricao</p>
        <h4 class="my-3">Mais Info:</h4>
        <ul>
            <li>
                <label asp-for="Eletrodomestico.Preco"></label>
                @Html.DisplayFor(model => model.Eletrodomestico.Preco)
            </li>
            <li>
                <label asp-for="Eletrodomestico.FreteGratis"></label>
                @Html.DisplayFor(model => model.Eletrodomestico.FreteGratisFormatado)
            </li>
            <li>
                <label asp-for="Eletrodomestico.DataCadastro"></label>
                @Html.DisplayFor(model => model.Eletrodomestico.DataCadastro)
            </li>
        </ul>
        <a class="btn my-3 btn-primary" asp-page="/Edit" asp-route-id="@Model.Eletrodomestico.EletrodomesticoId">Editar</a>
    </div>
</div>

